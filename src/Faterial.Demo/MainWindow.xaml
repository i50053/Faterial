<Window x:Class="Faterial.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faterial.Demo"
        Background="{DynamicResource Brush.Surface}"
        TextElement.FontFamily="{StaticResource FontFamily.Default}"
        TextElement.FontWeight="{StaticResource FontWeight.Body2}"
        TextElement.FontSize="{StaticResource FontSize.Body2}"
        TextElement.Foreground="{DynamicResource Brush.OnSurface}"
        Width="1280"
        MinWidth="320"
        Height="768"
        MinHeight="320">

    <StackPanel Margin="8">
        <TextBlock Text="Headline 1/Segoe UI/Light/86px"
                   FontWeight="{StaticResource FontWeight.Headline1}"
                   FontSize="{StaticResource FontSize.Headline1}"
                   Margin="0 -16 0 0" />
        <TextBlock Text="Headline 2/Segoe UI/Light/54px"
                   FontWeight="{StaticResource FontWeight.Headline2}"
                   FontSize="{StaticResource FontSize.Headline2}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Headline 3/Segoe UI/Regular/42px"
                   FontWeight="{StaticResource FontWeight.Headline3}"
                   FontSize="{StaticResource FontSize.Headline3}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Headline 4/Segoe UI/Regular/28px"
                   FontWeight="{StaticResource FontWeight.Headline4}"
                   FontSize="{StaticResource FontSize.Headline4}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Headline 5/Segoe UI/Regular/22px"
                   FontWeight="{StaticResource FontWeight.Headline5}"
                   FontSize="{StaticResource FontSize.Headline5}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Headline 6/Segoe UI/Medium/18px"
                   FontWeight="{StaticResource FontWeight.Headline6}"
                   FontSize="{StaticResource FontSize.Headline6}"
                   Margin="0 8 0 0" />
        
        <TextBlock Text="Subtitle 1/Segoe UI/Regular/15px"
                   FontWeight="{StaticResource FontWeight.Subtitle1}"
                   FontSize="{StaticResource FontSize.Subtitle1}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Subtitle 2/Segoe UI/Medium/13px"
                   FontWeight="{StaticResource FontWeight.Subtitle2}"
                   FontSize="{StaticResource FontSize.Subtitle2}"
                   Margin="0 8 0 0" />
        
        <TextBlock Text="Body 1/Segoe UI/Regular/15px"
                   FontWeight="{StaticResource FontWeight.Body1}"
                   FontSize="{StaticResource FontSize.Body1}"
                   Margin="0 8 0 0" />
        <TextBlock Text="Body 2/Segoe UI/Regular/13px"
                   FontWeight="{StaticResource FontWeight.Body2}"
                   FontSize="{StaticResource FontSize.Body2}"
                   Margin="0 8 0 0" />
        
        <TextBlock Text="BUTTON/SEGOE UI/MEDIUM/13PX"
                   FontWeight="{StaticResource FontWeight.Button}"
                   FontSize="{StaticResource FontSize.Button}"
                   Margin="0 8 0 0" />
        
        <TextBlock Text="Caption/Segoe UI/Regular/12px"
                   FontWeight="{StaticResource FontWeight.Caption}"
                   FontSize="{StaticResource FontSize.Caption}"
                   Margin="0 8 0 0" />
        <TextBlock Text="OVERLINE/SEGOE UI/REGULAR/10PX"
                   FontWeight="{StaticResource FontWeight.Overline}"
                   FontSize="{StaticResource FontSize.Overline}"
                   Margin="0 8 0 0" />
    </StackPanel>

</Window>
